{% extends "RSAdministrationBundle::layout.html.twig" %}

{% block title %}Recommender system{% endblock %}

{% block h1 %}Recommender system{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-offset-3 col-sm-6">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <div class="well">
                <form class="form-horizontal" method="post" role="form">
                    {% if not form.vars.valid %}
                        <div class="alert alert-error">
                            <strong>Errors :</strong>
                            {{ form_errors(form) }}
                            {{ form_errors(form.urlFile) }}
                        </div>
                        <br />
                    {% endif %}

                    <fieldset>
                        <div class="form-group">
                            {{ form_label(form.urlFile, "CSV file URL :", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-9">
                                {{ form_widget(form.urlFile, {'attr': {'placeholder': 'http://example.com/file.csv', 'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </fieldset>
                    <br />
                    {{ form_rest(form) }}
                    <div class="text-center"><input type="submit" class="btn btn-default" /></div>
                </form>
            </div>
            <div class="text-center">
                {% if previous is defined %}<a href="{{ path(previous) }}">Previous step</a> <i class="fa fa-arrow-left" aria-hidden="true"></i>{% endif %}
                {% if next is defined %}<i class="fa fa-arrow-right" aria-hidden="true"></i> <a href="{{ path(next) }}">Next step</a>{% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript_sub %}
    {{ parent() }}
{% endblock %}