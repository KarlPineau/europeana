<form class="form-horizontal" method="post" role="form">
    {% if not form.vars.valid %}
    <div class="alert alert-error">
        <strong>Errors :</strong>
        {{ form_errors(form) }}
        {{ form_errors(form.urlFile) }}
        {{ form_errors(form.fields) }}
    </div>
    <br />
    {% endif %}
    
    <fieldset>
        <div class="form-group">
            {{ form_label(form.urlFile, "CSV file URL :", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
            <div class="col-md-9">
                {{ form_widget(form.urlFile, {'attr': {'placeholder': 'http://example.com/file.csv', 'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.fields, "Fields :", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
            <div class="col-md-9">
                {{ form_widget(form.fields, {'attr': {'placeholder': 'Split by coma', 'class': 'form-control'}}) }}
            </div>
        </div>
    </fieldset>
        <br />
    {{ form_rest(form) }}
    <div class="text-center"><input type="submit" class="btn btn-default" /></div>
</form>