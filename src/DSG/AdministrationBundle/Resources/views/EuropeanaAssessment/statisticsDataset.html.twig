{% extends "DSGAdministrationBundle::layout.html.twig" %}

{% block title %}DataSet Generator{% endblock %}

{% block h1 %}DataSet Generator{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <h2>Global stats :</h2>
            <dl class="dl-horizontal"><dt>Total Europeana:</dt><dd>{{ countTotalEuropeana|number_format(2, '.', ',') }}</dd></dl>
            <hr />
            <h2>Dataset stats :</h2>
            <dl class="dl-horizontal"><dt>Total Dataset:</dt><dd>{{ datasetCountTotal|number_format(2, '.', ',') }}</dd></dl>

            <table class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Dataset</th>
                    <th>Number</th>
                    <th>% on Europeana</th>
                </tr>
                </thead>
                <tbody>
                {% for dataset, count in datasets %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ dataset }}</td>
                        <td>{{ count|number_format(2, '.', ',') }}</td>
                        <td>{% if count > 0 %}{{ ((count*100)/countTotalEuropeana)|round(5, 'floor') }}%{% else %}0%{% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascript_sub %}
    {{ parent() }}
{% endblock %}