{% extends "DSGAdministrationBundle::layout.html.twig" %}

{% block title %}BabelNet{% endblock %}

{% block h1 %}BabelNet{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-offset-3 col-sm-6">
            <div class="well">
                <form class="form-horizontal" method="post" role="form">
                    {% if not form.vars.valid %}
                        <div class="alert alert-error">
                            <strong>Errors :</strong>
                            {{ form_errors(form) }}
                            {{ form_errors(form.urlFile) }}
                        </div>
                        <br />
                    {% endif %}

                    <fieldset>
                        <div class="form-group">
                            {{ form_label(form.urlFile, "CSV file URL :", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-9">
                                {{ form_widget(form.urlFile, {'attr': {'placeholder': 'http://example.com/file.csv', 'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </fieldset>
                    <br />
                    {{ form_rest(form) }}
                    <div class="text-center"><input type="submit" class="btn btn-default" /></div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript_sub %}
    {{ parent() }}
{% endblock %}